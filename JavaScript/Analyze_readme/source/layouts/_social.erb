
<meta property="og:title" content="<%= current_page.data.title || "Algorithmia" %>">
<meta property="og:url" content="<%= current_page.data.url %>">
<meta property="og:description" content="<%= current_page.data.summary.lstrip.chomp[0..299] %>">
<meta name="description" content="<%= current_page.data.summary.lstrip.chomp[0..299] %>">


<% if current_page.data.featured_image.nil? %>
  <meta property="og:image" content="<%= current_page.data.url + '/img/Algorithmia_Bintree_Logo.png' %>" >
<% else %>
  <meta property="og:image" content="<%= current_page.data.url + current_page.data.featured_image %>" >
<% end %>
